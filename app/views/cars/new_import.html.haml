.page-header
  %h1
    Upload CSV File
    %small
      = link_to "Cancel", root_path, class: "btn btn-xs btn-primary"

= form_for @upload_csv_form, url: save_csv_cars_path, class: "form-inline" do |f|
  .form-group{class: add_error_class(:file, @upload_csv_form)}
    = f.label "File input", class: 'control-label'
    = f.file_field :file, class: "form-control filestyle"
    = render partial: "shared/error_messages", locals: {errors: @upload_csv_form.errors, key: :file}
  = f.submit "Upload", class: "btn btn-primary btn-sm"
